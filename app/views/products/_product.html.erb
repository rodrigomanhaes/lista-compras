<%= content_tag_for :li, product do %>
  <%= check_box_tag "product_id[]", product.id, product.done.present? %>
  <%= product.name %> <%= product.amount %> Added <%= time_ago_in_words product.created_at %> ago [<%= link_to 'Apagar', [@list, product], :confirm => 'Are you sure?', :method => :delete, :remote => true %>]
<% end %>