<%= form_for [list, product], :remote => true do |f| %>

  <%= error_messages_for product %>

  <div class="field">
    <%= f.label :name %> <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %> <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
